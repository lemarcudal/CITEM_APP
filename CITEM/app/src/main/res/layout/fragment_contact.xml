<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.guitarista.citem.MainFragment">

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="CONTACT US"
            android:textColor="@color/colorSecondaryText"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:layout_marginTop="72dp"
            android:id="@+id/textView1"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView1"
            android:layout_alignEnd="@+id/imageView1" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:src="@drawable/dti_citem"
            android:id="@+id/imageView1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="61dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="Center for International Trade Expositions and Missions (CITEM)"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorSecondaryText"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:id="@+id/textView2"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_alignStart="@+id/imageView1"
            android:layout_marginBottom="10dp"
            android:layout_alignEnd="@+id/imageView1" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:text="@string/citem_address"
            android:gravity="center"
            android:textColor="@color/colorSecondaryText"
            android:textSize="13dp"
            android:id="@+id/textView3"
            android:layout_below="@+id/imageView1"
            android:layout_alignStart="@+id/imageView1"
            android:layout_alignEnd="@+id/imageView1" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="Exhibitor Team"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorSecondaryText"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_alignEnd="@+id/textView3" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:text="(+63) 02 831 2201 local 242"
            android:gravity="center"
            android:textColor="@color/colorSecondaryText"
            android:textSize="13dp"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView3"
            android:layout_alignStart="@+id/textView4"
            android:layout_marginTop="11dp"
            android:layout_alignEnd="@+id/textView4" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="Buyer Team"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorSecondaryText"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:id="@+id/textView6"
            android:layout_below="@+id/textView4"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginTop="25dp"
            android:layout_alignEnd="@+id/textView5" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:text="(+63) 02 831 2201 local 322"
            android:gravity="center"
            android:textColor="@color/colorSecondaryText"
            android:textSize="13dp"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_alignEnd="@+id/textView5" />

    </RelativeLayout>

</ScrollView>